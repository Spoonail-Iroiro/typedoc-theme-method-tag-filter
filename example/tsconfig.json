{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "declaration": true,
    "types": [
      "node"
    ],
    "outDir": "./dist/lib"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "test/**",
    ".history/**"
  ]
}
